---
import { products_polerones } from "../utils/constants";
---

<section class="m-10" id="sweatshirt">
    <h2 class="text-2xl font-bold mb-4">Polerones</h2>
    <div class="grid grid-cols-4 grid-rows-2 gap-4" id="#polerones">
        {
            products_polerones.map((product) => (
                <div class="group relative bg-white border border-gray-200 rounded-lg overflow-hidden shadow-sm">
                    <img
                        src={product.imageUrl}
                        alt={product.title}
                        class="w-full h-auto object-contain object-center"
                    />
                    <div class="p-4">
                        <h3 class="text-lg font-semibold text-black light:text-white">
                            {product.title}
                        </h3>
                        <p class="text-gray-600">{product.description}</p>
                        <span class="text-lg font-bold text-gray-800">
                            {product.price}
                        </span>
                    </div>
                    <div class="absolute inset-0 flex items-end justify-center bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        <div class="flex space-x-2 p-4">
                            {product.sizes.map((size) => (
                                <span class="text-white bg-gray-800 rounded-full px-3 py-1">
                                    {size}
                                </span>
                            ))}
                        </div>
                    </div>
                </div>
            ))
        }
    </div>
</section>